@model EC2Project.Models.CaseModel

@{
    ViewData["Title"] = "Delete";
}
<style>
    .center {
        margin: auto;
        font-size: medium;
        width: 20%;
        padding: 10px;
    }
    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 7px 10px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }
</style>
<form asp-action="Delete" method="post">
    <h4 class="center">Do You Want TO Delete</h4>
    <p>
        <input asp-for="ID" name="ID" hidden="hidden" value="@Model.ID">
    </p>
    <input type="submit" value="Submit" />

</form>
