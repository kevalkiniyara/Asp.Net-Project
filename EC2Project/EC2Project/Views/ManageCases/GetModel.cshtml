@model IEnumerable<EC2Project.Models.CaseModel>

@{
    ViewData["Title"] = "GetModel";
}
<style>
    .center 
    {
        margin: auto;
        font-size: medium;
        width: 20%;
        padding: 10px;
    }

    input[type=text], select 
    {
        width: 100%;
        padding: 6px 10px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] 
    {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 7px 10px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .Table 
    {
        width: 100%;
        padding: 7px 10px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    input[type=submit]:hover 
    {
        background-color: #45a049;
    }

    div 
    {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 5px;
    }

    th 
    {
        border: 1px solid #ddd;
        padding: 8px;
    }
    th 
    {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #4CAF50;
        color: white;
    }
</style>
<div>
    <h1 class="center">Welcome To Patient-Portal</h1>
</div>
<p>
    <a  asp-action="Create">ADD</a>
</p>
<table class="Table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HealthCenterId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConsulatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterDate)
            </th>
            <th>
                <label>Action</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
         {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CaseNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientId)
                    </td>     
                    <td>
                        @Html.DisplayFor(modelItem => item.HealthCenterId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConsulatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fee)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegisterDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditModel", new {id=item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new {id=item.ID },new { onclick="return confirm('Do you Want to Delete');"})
                    </td>
                </tr>
         }
    </tbody>
</table>